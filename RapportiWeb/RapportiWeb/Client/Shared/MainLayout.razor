@inherits LayoutComponentBase
@inject NavigationManager nav


<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <MudAppBar Color="Color.Primary" Fixed="false">
        <MudImage Src="\img\logo.png" Fluid="true" Width="250" @onclick="@(()=>{nav.NavigateTo("/");})" />
        <MudSpacer />
        <MudIconButton Icon="@Icons.Material.Filled.Logout" Color="Color.Inherit" @onclick="@(()=>{nav.NavigateTo("/login");})" />
    </MudAppBar>

    <MudMainContent>
        @Body
    </MudMainContent>

</MudLayout>